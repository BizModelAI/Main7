# Database Configuration
DATABASE_URL=your_postgresql_database_url

# OpenAI API (optional - app works without this)
OPENAI_API_KEY=your_openai_api_key

# Email Service (optional - for email reports)
RESEND_API_KEY=your_resend_api_key

# Stripe Payment Processing (optional - for premium features)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PayPal Payment Processing (optional - for PayPal payments)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Frontend Configuration
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
FRONTEND_URL=http://localhost:5173

# Session Secret (required for user sessions)
SESSION_SECRET=your_random_session_secret

# Node Environment
NODE_ENV=production
